
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(cuid())
  firstName         String
  paternalLastName  String
  maternalLastName  String
  name              String
  email             String    @unique
  password          String?
  role              Role      @default(CLIENT)
  status            Status    @default(PENDIENTE)
  registeredAt      DateTime  @default(now())
  planStatus        PlanStatus @default(SIN_PLAN)
  inviteCode        String?   @unique
  avatarUrl         String?
  onboardingData    Json?
  plan              Json?     // Stores the UserPlan object
  progress          Progress[]
}

model Progress {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date        DateTime @default(now())
  progressData Json    // Stores the ProgressData object
  
  @@unique([userId, date])
}

model Template {
  id          String @id @default(cuid())
  title       String
  description String
  level       Level
  plan        Json // Stores the UserPlan object
}

enum Role {
  ADMIN
  CLIENT
}

enum Status {
  ACTIVO
  PENDIENTE
  INACTIVO
}

enum PlanStatus {
  APROBADO
  PENDIENTE
  SIN_PLAN
  NA
}

enum Level {
  PRINCIPIANTE
  INTERMEDIO
  AVANZADO
}
