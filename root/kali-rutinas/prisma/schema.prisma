// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// User models and authentication
model User {
  id                String    @id @default(cuid())
  firstName         String
  paternalLastName  String
  maternalLastName  String
  name              String
  email             String    @unique
  password          String?
  role              String    @default("client") // admin, client
  status            String    @default("pendiente") // activo, pendiente, inactivo
  registeredAt      DateTime  @default(now())
  planStatus        String    @default("sin-plan") // aprobado, pendiente, sin-plan, n/a
  inviteCode        String?   @unique
  avatarUrl         String?

  onboardingData    Json?
  plan              UserPlan?
  progressRecords   ProgressRecord[]
}

model UserPlan {
  id              String      @id @default(cuid())
  userId          String      @unique
  user            User        @relation(fields: [userId], references: [id])
  warmup          String?     @db.Text
  recommendations String?     @db.Text
  weeklyPlan      Json?
}

model ProgressRecord {
  id              String      @id @default(cuid())
  userId          String
  user            User        @relation(fields: [userId], references: [id])
  date            DateTime    @default(now())
  progressData    Json
}

model Template {
    id              String      @id @default(cuid())
    title           String      @unique
    description     String
    level           String // Principiante, Intermedio, Avanzado
    plan            Json
}
